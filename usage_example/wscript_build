#!/usr/bin/env python

import os
PWD=os.getcwd()

usage_example = bld.new_task_gen(
    features='cxx cprogram',
    source='main.cpp',
    target='logtest',
    includes='..',
    uselib='BOOST_THREAD',
    uselib_local='logger',
    install_path=PWD
)

usage_example = bld.new_task_gen(
    features='cc cprogram',
    source='main_c.c',
    target='main_c',
    includes='..',
    uselib=['BOOST_THREAD', 'LOGGER',],
    uselib_local=['logger_c',],
    install_path=PWD
)
